<p style="color: green"><%= notice %></p>

<%= render @customer %>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>

  <%= button_to "Destroy this customer", @customer, method: :delete ,form: { data: { turbo_confirm: 'Are you sure?' } } %>
</div>

<section class="section accounts">
  <div class="container">
    <h2 class="subtitle is-5">
      <strong><%= @customer.accounts.count %></strong> Accounts
    </h2>
    </div>
</section>